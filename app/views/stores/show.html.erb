<div class="header-div">
<h1><%= @store.name %></h1>

<%= cl_image_tag @store.images , class:"header-div__img" %>
<h3><%= @store.headline %></h3>
</div>
<hr>

<div class="basic-info">
<p><%= @store.address %></p>
<p><%= @store.bio %></p>
<p><%= @store.price %></p>
<a href="<%= @store.website %>"></a>
</div>

<div class="contact">

<div class="contact__basic">
<p>Call Us: <a href="tel:<%= @store.number %>"><%= @store.number %></a></p>
<p>Email Us: <a href="mailto:<%= @store.email %>"><%= @store.email %></a></p>
<% if (@store.website != "" && @store.website != null) %>
<p>Website: <a href="<%= @store.website %>"><%= @store.website %></a></p>
<% end %>
</div>

<div class="contact__social-media">
<% if (@store.facebook != "" && @store.facebook != null) %>
<p>Facebook: <a href="<% @store.facebook %>">
<%= @store.facebook  %></a></p>
<% end %>
<% if (@store.snapchat != "" && @store.snapchat != null) %>
<p>Snapchat: @<%= @store.snapchat %></p>
<% end %>
<% if (@store.instagram != "" && @store.instagram != null) %>
<p>Instagram: <a href="<%= @store.instagram %>"><%= @store.instagram %></a></p>
<% end %>
<% if (@store.twitter != "" && @store.twitter != null) %>
<p>Twitter: <a href="<%= @store.twitter %>"><%= @store.twitter %></a></p>
<% end %>
<% if (@store.extra_link != "" && @store.extra_link != null) %>
<p>Other: <a href="<%= @store.extra_link %>"><%= @store.extra_link %></a></p>
<% end %>
</div>

</div>


<div class="tags-div">
<hr>
<h5>Tagged With</h5>
<h6><%= @store.sub_category %></h6>
</div>
<hr>
<div class="comments-div">
<h5>Comments:</h5>
<% @store.comments.each do |comment| %>
  <p><%= comment.content %> <strong>-<%= comment.user.name%></strong></p>
<% end %>
<% if user_signed_in? %>
  <hr>
  <%= render partial: 'comments/form' %>
<% end %>
</div>
